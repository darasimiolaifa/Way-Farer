{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "no-trailing-spaces": [2, {"skipBlankLines": true}],
        "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "should|expect|it|describe"
            }
          ],
        "no-param-reassign": [
            "error",
            {
                "props" : true,
                "ignorePropertyModificationsFor": ["body", "req", "params"]
            }
        ],
        "consistent-return": 0,
        "prefer-destructuring": 0,
        "camelcase": 0,
        "no-unneeded-ternary": 0
    }
}